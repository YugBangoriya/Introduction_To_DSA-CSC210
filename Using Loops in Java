import java.util.Scanner;
public class Main 
{
    public static void main(String[] args) 
    {
        Scanner atd = new Scanner(System.in);
        System.out.println("Welcome to Attendance Record Software");
        System.out.println("");
        
        String name;
        System.out.println("Enter student name one by one (type 'Done' to stop)");


        // Using WHILE Loop to take names until user writes "Done"
        name = atd.nextLine();
        while (!name.equalsIgnoreCase("Done")) 
        {
            // Using FOR Loop to mark attendance for each student
            for (int i = 0; i < 1; i++) 
            {
                System.out.print("Mark attendance for " + name + " (P/A): ");
                String status = atd.nextLine();
                //Using If and Else conditions to improve visual results of the program
                if (status.equalsIgnoreCase("P"))
                {
                    System.out.println(name + " is Present");
                }
                else if (status.equalsIgnoreCase("A"))
                {
                    System.out.println(name + " is Absent");
                }
                else
                {
                    System.out.println("Incorrect Input");
                }
            }
            // Exit FOR Loop to go for next name
            System.out.println("");
            System.out.println("Enter next student name (or 'Done' to stop): ");
            name = atd.nextLine();
        }


        // Using DO-WHILE Loop for ending program
        String choice;
        do 
        {
            System.out.println("");
            System.out.println("Attendance recording completed.");
            System.out.print("Type 'Exit' to finish: ");
            choice = atd.nextLine();
        } 
        while (!choice.equalsIgnoreCase("Exit"));
        atd.close();
    }
}
